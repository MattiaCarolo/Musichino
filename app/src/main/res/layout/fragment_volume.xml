<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.player.Settings.VolumeFragment"
    android:background="@drawable/settings_shape">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lay_frag_volume"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_volumes_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/title_shape"
            android:gravity="center"
            android:text="@string/Liked_Songs"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:icon="@drawable/icon_keyboard"
            app:backgroundTint="@color/purple_light_gradient"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.8" />


        <TextView
            android:id="@+id/txt_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:background="@drawable/title_shape"
            android:padding="7dp"
            android:text="Volume"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_tagtrack"
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_margin="10dp"
            android:background="@drawable/icn_microphone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/bar_volumebar"
            app:layout_constraintHorizontal_bias="0.516"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_volume"
            app:layout_constraintVertical_bias="0.014" />

        <SeekBar
            android:id="@+id/bar_volumebar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:progress="100"
            android:progressDrawable="@drawable/volume_bar"
            android:thumb="@drawable/volume_thumb"
            app:layout_constraintBottom_toBottomOf="@+id/img_tagtrack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.08"
            app:layout_constraintTop_toTopOf="@+id/img_tagtrack"
            app:layout_constraintWidth_percent="0.8" />

        <TextView
            android:id="@+id/txt_eq_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/title_shape"
            android:padding="7dp"
            android:text="Equalizer"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.047"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bar_volumebar" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_equalizer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rv_border"
            android:padding="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.4"
            app:layout_constraintHorizontal_bias="0.609"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_eq_track"
            app:layout_constraintVertical_bias="0.282"
            app:layout_constraintWidth_percent="0.9" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>