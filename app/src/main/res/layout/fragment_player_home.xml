<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ui.player.home.FragmentPlayerHome">


    <ImageButton
        android:id="@+id/btn_Liked"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/pause"
        android:src="@drawable/exo_controls_pause"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.089"
        app:layout_constraintWidth_percent="0.2" />

    <ImageView
        android:id="@+id/iv_album"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/purple_light_gradient"
        android:padding="5dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintBottom_toTopOf="@+id/btn_play_pause"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.582"
        app:layout_constraintWidth_percent="0.7" />

    <ImageButton
        android:id="@+id/btn_play_pause"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/pause"
        android:src="@drawable/exo_controls_pause"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.919"
        app:layout_constraintWidth_percent="0.2" />

    <ImageButton
        android:id="@+id/btn_prev"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/pause"
        android:src="@drawable/exo_controls_previous"
        app:layout_constraintBottom_toBottomOf="@+id/btn_play_pause"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/btn_play_pause"
        app:layout_constraintHorizontal_bias="0.815"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_play_pause"
        app:layout_constraintVertical_bias="0.468"
        app:layout_constraintWidth_percent="0.12" />


    <ImageButton
        android:id="@+id/btn_addplaylist"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/pause"
        android:src="@drawable/exo_controls_fullscreen_exit"
        app:layout_constraintBottom_toBottomOf="@+id/btn_play_pause"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/btn_play_pause"
        app:layout_constraintHorizontal_bias="0.263"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_play_pause"
        app:layout_constraintVertical_bias="0.468"
        app:layout_constraintWidth_percent="0.12" />

    <ImageButton
        android:id="@+id/btn_next"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/pause"
        android:src="@drawable/exo_controls_next"
        app:layout_constraintBottom_toBottomOf="@+id/btn_prev"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.189"
        app:layout_constraintStart_toEndOf="@+id/btn_play_pause"
        app:layout_constraintTop_toTopOf="@+id/btn_prev"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_percent="0.12" />


    <ImageButton
        android:id="@+id/btn_shuffle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/pause"
        android:src="@drawable/exo_controls_shuffle_off"
        app:layout_constraintBottom_toBottomOf="@+id/btn_prev"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.73"
        app:layout_constraintStart_toEndOf="@+id/btn_play_pause"
        app:layout_constraintTop_toTopOf="@+id/btn_prev"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintWidth_percent="0.12" />



</androidx.constraintlayout.widget.ConstraintLayout>